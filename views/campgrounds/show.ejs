<% include ../partials/header %>

    <div class="row">
        
        <div class="col-md-9">
            <div class="card mb-3">
              <img class="card-img-top" src="<%= campground.image %>" alt="<%= campground.name %>">
              <div class="card-body">
                <p class="float-right">
                    $<%= campground.price %>/night
                </p>
                <h5 class="card-title"><%= campground.name %></h5>
                <p>
                        <em>Submitted By <a href="/users/<%= campground.author.id %>"><%= campground.author.username %></a></em>
                    </p>
                <hr>
                <p class="card-text"><%= campground.description %></p>
                
                    <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                        <a class="btn btn-danger" href="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">Delete</a>
                    <% } %>
                </div>
                
                
                <div class="card">
                    <div class="card-body">
                        <div class="text-right">
                            <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add New Comment</a>
                        </div>
                    <hr>
                    <% campground.comments.forEach(function(comment){ %>
                        <div class="row">
                            <div class="col-md-12 mb-2">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="floar-right">
                                            <strong><%= comment.author.username %></strong>
                                            <%= comment.text %>
                                        </div>
                                        <div class="float-right">
                                            <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                                                <form style="display: inline" class="pull-right" action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                                    <a href="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/edit" class="btn btn-sm btn-warning">EDIT</a>
                                                    <button class="btn btn-sm btn-danger">DELETE</button>
                                                </form>
                                            <% } %> 
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
        
    

<% include ../partials/footer %>