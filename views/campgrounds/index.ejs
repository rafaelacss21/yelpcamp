<% include ../partials/header %> 
</div>
     <header class="jumbotron jumbotron-fluid">
         <div class="container text-center">
             <h1 class="text-shadow"><span class="glyphicon glyphicon-tree-conifer"></span> Welcome To YelpCamp!</h1>
             <p class="text-shadow">View our hand-picked campgrounds from all over the world</p>
             <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
             </p>
         </div>
     </header>
     <div class="container">
     <div class="row text-center" id="campground-grid">
         
         <div class="col-md-12">
             <% if(noMatch !== null) { %>
             <h3><%= noMatch %></h3>
             <% } %>
         </div>
         
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card">
                  <img class="card-img-top index" src="<%= campground.image %>" alt="<%= campground.name %>">
                  <div class="card-body">
                    <h5 class="card-title"><%= campground.name %></h5>
                    <p><i class="fas fa-map-marker-alt"></i><%= campground.location %></p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                  </div>
                  
                </div>
            </div>
        <% }); %>
    </div>
</div>
<% include ../partials/footer %>
