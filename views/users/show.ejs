<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1><%= user.firstName + " " + user.lastName%>'s Profile</h1>
        <div class="col-sm-4">
            <div class="thumbnail">
                <p><img class="img-responsive" src="<%= user.avatar%>" alt="user profile image"></p>
                <p><b> First Name: </b><%= user.firstName %></p>
                <p><b> Last Name: </b><%= user.lastName %></p>
                <p><b> E-mail: </b><a href="mailto:<%= user.email %>"><%= user.email %></a></p>
            </div>
        </div>
        <div class="col-sm-6">
            <h4><%= user.username %>'s campgrounds:</h4>
    		<ul>
    		<% campgrounds.forEach(function(campground) { %>
    			<li><a href="/campgrounds/<%= campground.id %>"><%= campground.name %></a></li>
    		<% }); %>
    		</ul>
        </div>
    </div>
</div>
<% include ../partials/footer %>
